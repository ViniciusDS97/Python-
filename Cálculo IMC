print("Peso ideal")

sexo = input("Qual o seu sexo?: \n")

homem = 'h'
mulher = 'm'
sexo = 0

if(sexo == homem):
    altura = float(input("Insira a sua altura: \n"))
    
    imc_h = (72.7*altura) - 58
    
    print("Seu peso ideal é: ", imc_h, "kg")
    
else:
    altura = float(input("Insira a sua altura: \n"))
    
    imc_m = (62.1*altura) - 44.7
    
    print("Seu peso ideal é: ", imc_m, "kg")
