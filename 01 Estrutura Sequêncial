print("01 Estrutura Sequencial")

int1 = int(input("Insira o primeiro número inteiro: \n"))
int2 = int(input("Insira o segundo número inteiro: \n"))
real = float(input("Insira o número real: \n"))

dobro_int1 = int1 * 2 
metade_int2 = int2 / 2 
dobro_metade = dobro_int1 + metade_int2

triplo_int1 = int1 * 3 
triplo_real = triplo_int1 + real 
cubo = real * real * real

print("o produto do dobro do primeiro com metade do segundo é: ", dobro_metade)
print("a soma do triplo do primeiro com o terceiro é: ", triplo_real)
print("o terceiro elevado ao cubo é: ", cubo)
